<!-- dtl:block:BulkAction -->
<form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="compose" class="Validate">
    <input type="hidden" name="Action" value="$Env{"Action"}"/>
    <input type="hidden" name="Subaction" value="Do"/>

    <div class="LayoutPopup ARIARoleMain">
        <div class="Header">
            <h1>$Text{"ITSM ConfigItem Bulk Action"}</h1>
            <p>
                <a class="CancelClosePopup" href="#">$Text{"Cancel & close window"}</a>
            </p>
        </div>
        <div class="Content">

            <div class="Content">
<!-- dtl:block:UsedConfigItemID -->
                <input type="hidden" name="ConfigItemID" value="$QData{"ConfigItemID"}" />
<!-- dtl:block:UsedConfigItemID -->

                <fieldset class="TableLike FixedLabel">

<!-- dtl:block:DeplState -->
                    <label for="DeplStateID">$Text{"Deployment state"}:</label>
                    <div class="Field">
                        $Data{"DeplStateStrg"}
                    </div>
                    <div class="Clear"></div>
<!-- dtl:block:DeplState -->
<!-- dtl:block:InciState -->
                    <label for="InciStateID">$Text{"Incident state"}:</label>
                    <div class="Field">
                        $Data{"InciStateStrg"}
                    </div>
                    <div class="Clear"></div>
<!-- dtl:block:InciState -->

                    <div class="SpacingTop"></div>
                    <label for="LinkTogether">$Text{"Link together"}:</label>
                    <div class="Field">
                        $Data{"LinkTogetherYesNoOption"}
                        $Data{"LinkTogetherLinkTypeStrg"}
                    </div>
                    <div class="Clear"></div>

                    <label for="LinkTogetherAnother">$Text{"Link to another"}:</label>
                    <div class="Field">
                        <input type="text" class="$QData{"LinkTogetherAnotherInvalid"} W25pc" id="LinkTogetherAnother" name="LinkTogetherAnother" value="$QData{"LinkTogetherAnother"}"/>
                        <div id="LinkTogetherAnotherServerError" class="TooltipErrorMessage"><p>$Text{"Invalid Configuration Item number!"}</p></div>
                        $Data{"LinkTypeStrg"}
                        <p class="FieldExplanation">$Text{"The number of another Configuration Item to link with."}</p>
                    </div>
                    <div class="Clear"></div>
                </fieldset>
            </div>
        </div>
        <div class="Footer">
            <button class="Primary" id="submitRichText" accesskey="g" title="$Text{"Submit"} (g)" type="submit" value="$Text{"Submit"}">$Text{"Submit"}</button>
        </div>
    </div>
</form>
<!-- dtl:block:BulkAction -->
